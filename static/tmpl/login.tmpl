<div>
    <div class="is-row">
        <div class="is-col"></div>
        <div class="is-col is-width-small is-center">
            <div class="is-center text-center"><h3>ECM server</h3></div>
        </div>
        <div class="is-col"></div>
    </div>
    <br />
    <br />

    <div class="is-row">
        <div class="is-col"></div>
        <div class="is-col">
            <form method="post" action="/authenticate">
                <fieldset>
                    <legend>Login form</legend>
                    <div class="form-item">
                        <label>User name</label>
                        <input type="text" name="user" id="user" class="is-95">
                    </div>
                    <div class="form-item">
                        <label>Password</label>
                        <input type="password" name="password" id="password" class="is-95">
                    </div>
                    <div class="form-item">
                        <label>OTP code</label>
                        <input type="text" name="otp" id="otp" class="is-95" placeholder="One-Time Password code">
                    </div>
                    <div class="form-item">
                        <div class="is-row">
                            <div class="is-col"></div>
                            <div class="is-col"></div>
                            <div class="is-col">
                                <button class="button is-secondary is-small">Submit</button>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="is-col"></div>
    </div>
    <br />
    <div class="is-row">
        <div class="is-col"></div>
        <div class="is-col is-width-small is-center">
            <div class="is-center text-center">
                If you are not yet registered, please
                to <a href="/signup">SignUp</a>
            </div>
        </div>
        <div class="is-col"></div>
    </div>

</div>
